[Unit]
Description=HealthCare Database Backup
After=postgresql.service

[Service]
Type=oneshot
User=umbrel
ExecStart=/home/umbrel/HealthCare/scripts/backup-local.sh
StandardOutput=append:/home/umbrel/backups/healthcare/backup.log
StandardError=append:/home/umbrel/backups/healthcare/backup.log

[Install]
WantedBy=multi-user.target
