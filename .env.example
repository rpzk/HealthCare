# =============================================================================
# Healthcare System - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD=your_secure_postgres_password
DATABASE_URL="postgresql://healthcare:your_password@localhost:5432/healthcare_db"

# -----------------------------------------------------------------------------
# Security / Encryption
# -----------------------------------------------------------------------------
# 32-char hex string for AES encryption
ENCRYPTION_KEY=your_32_char_encryption_key_here
# Salt for hashing sensitive data
HASH_SALT=your_salt_here
# Secret for JWT tokens - generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
# Key for recording file encryption
RECORDING_ENCRYPTION_KEY=your_recording_encryption_key

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NODE_ENV=development

# -----------------------------------------------------------------------------
# AI / LLM Configuration
# -----------------------------------------------------------------------------
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# -----------------------------------------------------------------------------
# Redis (for job queues)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
EMAIL_ENABLED=false
EMAIL_FROM=noreply@yourdomain.com
EMAIL_PROVIDER=nodemailer
# SMTP Settings (when EMAIL_PROVIDER=nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./uploads

# -----------------------------------------------------------------------------
# Payment Gateways (configure as needed)
# -----------------------------------------------------------------------------
# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=
STRIPE_WEBHOOK_SECRET=

# PagSeguro
PAGSEGURO_EMAIL=
PAGSEGURO_TOKEN=

# PIX
PIX_KEY=
PIX_MERCHANT_NAME=
PIX_MERCHANT_CITY=

# RedotPay (PIX que cai direto em crypto na carteira)
# Paciente paga via PIX comum, você recebe em USDT/crypto
REDOTPAY_PIX_KEY=
REDOTPAY_MERCHANT_NAME=
REDOTPAY_MERCHANT_CITY=
REDOTPAY_CRYPTO_TYPE=USDT

# Cryptocurrency Payments (carteiras diretas)
CRYPTO_BTC_ADDRESS=
CRYPTO_ETH_ADDRESS=
CRYPTO_USDT_ADDRESS=
CRYPTO_NETWORK=ethereum
# API keys para verificação de blockchain (opcional, mas recomendado)
ETHERSCAN_API_KEY=

# -----------------------------------------------------------------------------
# Telemedicine / WebRTC
# -----------------------------------------------------------------------------
# ICE servers configuration (JSON format)
NEXT_PUBLIC_ICE=[{"urls":"stun:stun.l.google.com:19302"}]
# TURN server (optional, for NAT traversal)
TURN_SERVER=turn:your-turn-server.com:3478
TURN_USERNAME=
TURN_PASSWORD=

# -----------------------------------------------------------------------------
# Digital Certificates
# -----------------------------------------------------------------------------
# Password for A1 certificate file
CERTIFICADO_SENHA=

# -----------------------------------------------------------------------------
# Debug / Development
# -----------------------------------------------------------------------------
DEBUG_AUTH=false

# -----------------------------------------------------------------------------
# Scheduled Tasks
# -----------------------------------------------------------------------------
# Secret for cron job authentication
CRON_SECRET=your_cron_secret

# -----------------------------------------------------------------------------
# OpenTelemetry (optional)
# -----------------------------------------------------------------------------
# OTEL_ENABLED=true
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# AI Configuration
# AI_PROVIDER=groq  # 'groq' (cloud, fast) or 'ollama' (local)
# GROQ_API_KEY=your_groq_api_key
# GROQ_MODEL=llama-3.3-70b-versatile  # Options: llama-3.3-70b-versatile, mixtral-8x7b-32768, gemma2-9b-it
